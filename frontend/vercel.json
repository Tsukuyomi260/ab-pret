{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_BACKEND_URL": "https://ab-pret-back.onrender.com",
    "CI": "false"
  },
  "rewrites": [{"source": "/(.*)", "destination": "/index.html"}],
  "headers": [
    {"source": "/static/(.*)", "headers": [{"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}]},
    {"source": "/index.html", "headers": [
      {"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate, max-age=0"},
      {"key": "Pragma", "value": "no-cache"},
      {"key": "Expires", "value": "0"}
    ]},
    {"source": "/version.json", "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]},
    {"source": "/serviceWorker.js", "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]},
    {"source": "/ios-fix.js", "headers": [{"key": "Cache-Control", "value": "no-cache, no-store, must-revalidate"}]},
    {"source": "/(.*)", "headers": [
      {"key": "X-Content-Type-Options", "value": "nosniff"},
      {"key": "X-Frame-Options", "value": "DENY"},
      {"key": "X-XSS-Protection", "value": "1; mode=block"}
    ]}
  ]
}
